{
  "name": "ecs-image-handler",
  "version": "0.0.1",
  "scripts": {
    "dev": "nodemon --ignore test/ --watch src -e ts,tsx --exec ts-node -P tsconfig.prod.json src/index.ts",
    "serve": "node dist/index.js",
    "build": "tsc --project tsconfig.prod.json",
    "test:compile": "tsc --noEmit --project tsconfig.jest.json",
    "test:all": "rm -fr dist/ && yarn test:compile && jest --passWithNoTests --all --coverageProvider=v8 && eslint",
    "build:docker": "docker build -t ecs-image-handler .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:update": "jest --updateSnapshot",
    "upgrade-dependencies": "export CI=0 && npm-check-updates --upgrade --target=minor --reject='projen' && yarn install --check-files && yarn upgrade",
    "watch": "tsc --project tsconfig.prod.json -w",
    "eslint": "eslint --ext .ts,.tsx --fix --no-error-on-unmatched-pattern src test build-tools .projenrc.js",
    "pre-commit": "yarn eslint && yarn test:all"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn pre-commit"
    }
  },
  "license": "Apache-2.0",
  "devDependencies": {
    "@types/jest": "^26.0.24",
    "@types/koa": "^2.13.4",
    "@types/koa-logger": "^3.1.1",
    "@types/node": "^14.17.5",
    "@types/sharp": "^0.28.4",
    "@typescript-eslint/eslint-plugin": "^4.28.4",
    "@typescript-eslint/parser": "^4.28.4",
    "eslint": "^7.31.0",
    "eslint-import-resolver-node": "^0.3.4",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.23.4",
    "jest": "^27.0.6",
    "jest-junit": "^12",
    "json-schema": "^0.3.0",
    "nodemon": "^2.0.12",
    "npm-check-updates": "^11",
    "ts-jest": "^27.0.4",
    "ts-node": "^10.1.0",
    "typescript": "^4.3.5",
    "husky": "^2.2.0"
  },
  "dependencies": {
    "aws-sdk": "^2.953.0",
    "http-errors": "^1.8.0",
    "koa": "^2.13.1",
    "koa-logger": "^3.2.1",
    "sharp": "^0.28.3"
  },
  "bundledDependencies": [],
  "engines": {
    "node": ">= 12.0.0"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/cdk.out/"
    ],
    "watchPathIgnorePatterns": [
      "/node_modules/",
      "/cdk.out/"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts?(x)",
      "**/?(*.)+(spec|test).ts?(x)"
    ],
    "clearMocks": true,
    "collectCoverage": true,
    "coverageReporters": [
      "json",
      "lcov",
      "clover",
      "text"
    ],
    "coverageDirectory": "coverage",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/cdk.out/"
    ],
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "test-reports"
        }
      ]
    ],
    "preset": "ts-jest",
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.jest.json"
      }
    }
  }
}
